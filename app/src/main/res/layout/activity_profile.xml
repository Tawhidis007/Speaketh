<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/gr"
    android:orientation="vertical"
    tools:context=".Profile">

    <androidx.cardview.widget.CardView
        app:cardElevation="6dp"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        android:id="@+id/visiting_profile_image"
        android:src="@drawable/profile_image"
        android:layout_height="200dp"/>

    <TextView
        android:layout_marginTop="12dp"
        android:text="User Name"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:textSize="26sp"
        android:id="@+id/visiting_profile_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="User Status"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="6dp"
        android:id="@+id/visiting_profile_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:text="Send Message"
        android:textColor="@color/cardview_light_background"
        android:background="@drawable/buttons"
        android:id="@+id/send_message_request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textSize="18sp"
        android:text="Reject Request"
        android:textColor="@color/cardview_light_background"
        android:background="@color/colorAccent2"
        android:id="@+id/reject_request_button"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>