<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:padding="6dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="12dp"

        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:src="@drawable/profile_image"
            android:id="@+id/display_user_profile_image"
            android:layout_height="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_weight=".7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="6dp"
            android:textSize="20sp"
            android:id="@+id/display_user_name"
            android:text="User Name"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingLeft="6dp"
            android:textSize="13sp"
            android:id="@+id/display_user_status"
            android:text="User Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:paddingLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:visibility="gone"
                android:padding="6dp"
                android:textColor="@color/cardview_light_background"
                android:background="@drawable/new_button"
                android:text="Cancel Request"
                android:id="@+id/req_reject_button_for_sent"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
            <Button

                android:layout_marginRight="12dp"
                android:textColor="@color/cardview_light_background"
                android:background="@drawable/buttons"
                android:text="Accept"
                android:visibility="gone"
                android:id="@+id/req_accept_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <Button
                android:visibility="gone"
                android:textColor="@color/cardview_light_background"
                android:background="@drawable/new_button"
                android:text="Reject"
                android:id="@+id/req_reject_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight=".1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/display_user_online"
            android:src="@drawable/online"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#A09E9E"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>